<div class="container">
  <h1>Listing links</h1>
  <div class="bs-docs-section clearfix">
    <div class="row">

      <table class="table table-striped table-hover ">
        <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Url</th>
          <th>Details</th>
        </tr>
        </thead>
        <tbody>
          <% @links.each_with_index do |link, index| %>
            <tr>
              <td><%= index %></td>
              <td><%= link.title %></td>
              <td><a href="<%= link.uri %>" target="_blank"><%= link.uri %></a>  </td>
              <td><%= link_to ">>", link_path(link) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
