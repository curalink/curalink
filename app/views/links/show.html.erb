<div class="container">
  <h1>Link details:</h1>

  <%= form_for :link, :html => {:class => "form-horizontal"}, url: links_path do |f| %>
        <div class="form-group">
          <%= f.label :title, :class => "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.text_field :title,
                             {:class => "form-control",
                              :readonly => true} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :uri, :class => "col-lg-2 control-label" %><br>
          <div class="col-lg-10">
            <%= f.text_field :uri,
                             {:class => "form-control",
                              :readonly => true} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :added_by, :class => "col-lg-2 control-label" %><br>
          <div class="col-lg-10">
            <%= f.text_field :added_by,
                             {:class => "form-control uneditable-input",
                              :readonly => true,
                              :placeholder => "author unknown"
                             } %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :created_at, :class => "col-lg-2 control-label" %><br>
          <div class="col-lg-10">
            <%= f.text_field :created_at,
                             {:class => "form-control uneditable-input",
                              :readonly => true,
                              :value => @link.created_at.to_formatted_s(:db)} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :updated_at, :class => "col-lg-2 control-label" %><br>
          <div class="col-lg-10">
            <%= f.text_field :updated_at,
                             {:class => "form-control uneditable-input",
                              :readonly => true,
                              :value => @link.updated_at.to_formatted_s(:db)} %>
          </div>
        </div>
  <% end %>
</div>